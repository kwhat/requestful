{
    "name": "kwhat/requestful",
    "description": "A simple PSR compatible HTTP client library",
    "homepage": "https://github.com/kwhat/requestful",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name":"Alex Barker",
            "email": "alex@1stleg.com",
            "homepage":"http://github.com/kwhat",
            "role": "Owner"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "ext-curl": "*",
        "fig/http-message-util": "^1.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "3.*"
    },
    "archive": {
        "exclude": ["build/", "bin/", "composer.lock"]
    },
    "autoload": {
        "psr-4": {
            "Requestful\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Requestful\\Test\\": "test"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "secure-http": false,
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcs --standard=PSR1,PSR2 src/ tests/"
        ],
        "fix": [
            "phpcbf --standard=PSR1,PSR2 src/ tests/"
        ],
        "test": [
            "phpunit --coverage-html build/coverage tests/"
        ]
    }
}
